<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Student Attendance</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css"
      rel="stylesheet"
    />
    <style>
      body {
        background-color: whitesmoke;
      }

      .navbar {
        box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
      }

      .navbar.sticky-top {
        position: sticky;
        top: 0;
        z-index: 1020;
      }

      .nav-link {
        font-weight: 500;
      }

      .nav-link:hover {
        color: gold !important;
      }

      .navbar-brand {
        font-weight: bold;
        font-size: 1.5rem;
      }

      .btn-logout {
        background-color: crimson;
        color: white;
        border: none;
      }

      .btn-logout:hover {
        background-color: firebrick;
      }

      /* Custom toggle behavior */
      #navbarNav {
        display: none;
      }

      #navbarNav.show {
        display: block;
      }

      @media (min-width: 992px) {
        #navbarNav {
          display: flex !important;
        }
      }
    </style>
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark px-3 sticky-top">
      <a class="navbar-brand" href="/">
        <i class="bi bi-journal-check me-2"></i>Attendance
      </a>
      <button class="navbar-toggler" id="customToggleBtn">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
            <a class="nav-link" href="/about">About</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/classes">Classes</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/students">Students</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/performance">Performance</a>
          </li>
          <li class="nav-item">
            <a class="btn btn-logout ms-2" href="/logout" role="button"
              >Logout</a
            >
          </li>
        </ul>
      </div>
    </nav>

    <div class="container mt-4">
      <!-- Your content here -->
    </div>

    <script>
      // Toggle navigation menu manually
      document
        .getElementById("customToggleBtn")
        .addEventListener("click", () => {
          const nav = document.getElementById("navbarNav");
          nav.classList.toggle("show");
        });
    </script>
  </body>
</html>
